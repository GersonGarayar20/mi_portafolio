---
import Footer from "../layouts/Footer.astro";
import Home from "../layouts/Home.astro";
import Layout from "../layouts/Layout.astro";
import Projects from "../layouts/Projects.astro";
---

<Layout title="Gerson Garayar - Frontend Developer">
  <img class="fixed w-full h-screen -z-10 object-cover" src="bg.jpg" alt="bg" />

  <header class="bg-gradient-to-t from-black to-black/50">
    <section class="max-w-6xl m-auto px-4 md:px-12">
      <Home />
    </section>
  </header>
  <main class="bg-black">
    <section class="max-w-6xl m-auto px-4 md:px-12">
      <Projects />
    </section>
  </main>
  <footer class="bg-neutral-900">
    <section class="max-w-6xl m-auto px-4 md:px-12">
      <Footer />
    </section>
  </footer>
</Layout>

<style>
  img {
    transform: scale(120%);
    animation: zoom 20s;
  }

  @keyframes zoom {
    from {
      transform: scale(100%);
    }
  }
</style>
